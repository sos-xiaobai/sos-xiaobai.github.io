source "https://rubygems.org"
gem "jekyll", "~> 4.4.1"  # 强制使用 Jekyll 4.x
gem "jekyll-gist"         # 支持 Gist 代码片段
gem "jekyll-paginate"     # 文章分页功能
gem "jekyll-seo-tag"      # SEO 优化标签
gem "jekyll-feed"         # 生成 RSS 订阅源
gem "jekyll-sitemap"      # 生成站点地图
gem "webrick"             # Jekyll 4.x 需要 webrick 作为本地服务器
